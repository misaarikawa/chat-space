%body
  .notification
  #account-page.account-page
    .account-page__inner.clearfix
      .account-page__inner--left.account-page__header
        %h2 Create Account
        %h5 新規アカウントの作成
        %a.btn{:href => "/users/sign_in"} Log in
        %br/
      .account-page__inner--right.user-form
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          %form#new_user.new_user{"accept-charset" => "UTF-8", :action => "/users", :method => "post"}
            %input{:name => "utf8", :type => "hidden", :value => "✓"}/
            %input{:name => "authenticity_token", :type => "hidden", :value => "RnTxMxWI/4N7WRIb5DVWbtxxJesXU/priSNcvY5QPHEv0e2Stc4aQt3JfiowO04cbCkbgKENllyT+BAJi85IPA=="}/
            .field
              .field-label
                = f.label :Name
              .field-input
                = f.text_field :name, autofocus: true
            .field
              .field-label
                = f.label :Email
              .field-input
                = f.email_field :email
            .field
              .field-label
                = f.label :Password
                %i (英数字8文字以上)
              .field-input
                = f.password_field :password
              .field
              .field-label
                = f.label :Password 
                %label confirmation
              .field-input
                = f.password_field :password_confirmation
              .actions
                = f.submit "Create Account", name: "commit", value: "Create Account", class: "btn"
